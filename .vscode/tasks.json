{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "docker-build-pull",
        "docker-build-all"
      ]
    },
    {
      "label": "docker-build-pull",
      "type": "shell",
      "command": "docker pull pachyderm/compile:go1.12.1"
    },
    {
      "label": "docker-build-all",
      "dependsOn": [
        "docker-build-worker",
        "docker-build-pachd"
      ]
    },
    {
      "label": "docker-build-worker",
      "type": "shell",
      "command": "./etc/compile/vscode_compile_task.sh worker"
    },
    {
      "label": "docker-build-pachd",
      "type": "shell",
      "command": "./etc/compile/vscode_compile_task.sh pachd"
    },
    {
      "label": "launch-dev",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "install",
        "deploy-dev",
        "wait-dev"
      ],
      "problemMatcher": []
    },
    {
      "label": "install",
      "type": "shell",
      "command": "./etc/build/vscode_install_task.sh",
      "problemMatcher": []
    },
    {
      "label": "deploy-dev",
      "type": "shell",
      "command": "pachctl deploy local --no-guaranteed -d --dry-run | kubectl apply -f -"
    },
    {
      "label": "wait-dev",
      "type": "shell",
      "command": "until timeout 1s ./etc/kube/check_ready.sh app=pachd; do sleep 1; done"
    }
  ]
}